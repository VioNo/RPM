<Page x:Class="RPM.DescriptionDB"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RPM"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DescriptionDB">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="PageStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="ProductsButton" Content="Products" Click="ProductsButton_Click" />
        <Button x:Name="EmployeesButton"  Grid.Row="1" Content="Employees" Click="EmployeesButton_Click" />
        <Button x:Name="GrapeVarietiesButton" Grid.Row="2" Content="GrapeVarieties" Click="GrapeVarietiesButton_Click"/>
        <Button x:Name="StorageButton" Grid.Row="3" Content="Storage" Click="StorageButton_Click"/>
        <Button x:Name="ClientsButton" Grid.Row="4" Grid.Column="0" Content="Clients" Click="ClientsButton_Click"/>
        <Button x:Name="ClimateButton" Grid.Row="5" Grid.Column="0" Content="Climate" Click="ClimateButton_Click"/>

        <Button x:Name="FermentationButton" Grid.Row="0" Grid.Column="1" Content="Fermentation" Click="FermentationButton_Click"/>
        <Button x:Name="GrowingConditionsButton" Grid.Row="1" Grid.Column="1" Content="GrowingConditions" Click="GrowingConditionsButton_Click"/>
        <Button x:Name="JobTitlesButton" Grid.Row="2" Grid.Column="1" Content="JobTitles" Click="JobTitlesButton_Click"/>
        <Button x:Name="OrdersButton" Grid.Row="3" Grid.Column="1" Content="Orders" Click="OrdersButton_Click"/>
        <Button x:Name="PartyButton" Grid.Row="4" Grid.Column="1" Content="Party" Click="PartyButton_Click"/>
        <Button x:Name="PaymentButton" Grid.Row="5" Grid.Column="1" Content="Payment" Click="PaymentButton_Click"/>
        
        <Button x:Name="ShipmentsButton" Grid.Row="0" Grid.Column="2" Content="Shipments" Click="ShipmentsButton_Click"/>
        <Button x:Name="SoilButton" Grid.Row="1" Grid.Column="2" Content="Soil" Click="SoilButton_Click"/>
        <Button x:Name="StorageWineButton" Grid.Row="2" Grid.Column="2" Content="StorageWine" Click="StorageWineButton_Click"/>
        <Button x:Name="WaterButton" Grid.Row="3" Grid.Column="2" Content="Water" Click="WaterButton_Click"/>
        <Button x:Name="YieldButton" Grid.Row="4" Grid.Column="2" Content="Yield" Click="YieldButton_Click"/>
        <Button x:Name="PaymentsOrderButton" Grid.Row="5" Grid.Column="2" Content="PaymentsOrder" Click="PaymentsOrderButton_Click"/>
        
        <Button x:Name="BackButton" Grid.Row="7" Grid.Column="1" Content="Back" Click="BackButton_Click"/>
    </Grid>
</Page>
