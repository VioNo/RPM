<Page x:Class="RPM.StorageDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RPM"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StorageDialog">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="MainStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid >
        <StackPanel Margin="0,5">
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Адрес:" Margin="0,5"/>
                <TextBox x:Name="AddressTextBox" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Заполненность:" Margin="0,5" Width="125"/>
                <TextBox x:Name="FullnessTextBox" />
                <TextBlock Text="%" Width="20"/>
            </StackPanel>
            <Button Content="Save" Click="SaveButton_Click" Margin="10" />
                <Button x:Name="Back" Content="Back" Click="BackButton_Click" Margin="5"/>
        </StackPanel>

    </Grid>
</Page>
