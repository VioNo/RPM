<Page x:Class="RPM.UserInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RPM"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserInfoPage">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="PageStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    
    <Grid Margin="10">
        <StackPanel Orientation="Vertical" Height="400" VerticalAlignment="Top" Width="600">
            <TextBlock Text="ID:" FontWeight="Bold" />
            <TextBlock Name="IdTextBlock" Margin="5" />
            <TextBlock Text="Login:" FontWeight="Bold" />
            <TextBlock Name="LoginTextBlock" Margin="5" />
            <TextBlock Text="Phone:" FontWeight="Bold" />
            <TextBlock Name="PhoneTextBlock" Margin="5" />
            <TextBlock Text="Email:" FontWeight="Bold" />
            <TextBlock Name="EmailTextBlock" Margin="5" />
        </StackPanel>
        <Button x:Name="Back" Content="Вернуться (Back)" Click="BackButton_Click" Margin="5" />
        <Frame x:Name="userInfoPage" Grid.ColumnSpan="5"  Grid.RowSpan="7"/>
        
    </Grid>
</Page>
