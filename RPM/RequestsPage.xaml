<Page x:Class="RPM.RequestsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RPM"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RequestsPage">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="MainStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель параметров -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Label Content="Год:" VerticalAlignment="Center"/>
            <TextBox x:Name="YearTextBox" Width="60" Margin="5" 
                     Text="{Binding SelectedYear, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Месяц:" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <TextBox x:Name="MonthTextBox" Width="60" Margin="5" 
                     Text="{Binding SelectedMonth, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Панель с кнопками запросов -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Урожай за выбранный месяц" 
                    Command="{Binding YieldCommand}"
                    Margin="5" Padding="10" Width="250"/>

            <Button Content="Ферментация за выбранный месяц" 
                    Command="{Binding FermentationCommand}"
                    Margin="5" Padding="10" Width="290"/>
            <Button x:Name="Back" Content="Back" Click="BackButton_Click" Margin="5" />
        </StackPanel>

        <!-- Результаты запроса -->
        <DataGrid Grid.Row="2" 
                 Margin="10"
                 AutoGenerateColumns="True"
                 ItemsSource="{Binding QueryResults}"
                 IsReadOnly="True"/>

        <!-- Статус бар -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Top" Width="650"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar Width="100" Height="20" IsIndeterminate="{Binding IsBusy}"/>
            </StatusBarItem>
        </StatusBar>
        
    </Grid>
</Page>
