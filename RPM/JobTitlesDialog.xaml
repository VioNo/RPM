<Page x:Class="RPM.JobTitlesDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RPM"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="JobTitlesDialog">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="MainStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <StackPanel Margin="0,10,0,10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Job Title:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="JobTitleTextBox" Width="200"/>
            </StackPanel>
            <Button Content="Save" Click="SaveButton_Click" Margin="0,20,0,10"/>
            <Button Content="Back" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
