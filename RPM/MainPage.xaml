<Page x:Class="RPM.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RPM"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="MainStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="450"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
            <TextBlock Text="Login:" Margin="5"/>
            <TextBox Name="LoginTextBox" Margin="5" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1">
            <TextBlock Text="Password:" Margin="5" />
            <PasswordBox Name="PasswordBox" Width="200" Height="30" Margin="5" VerticalAlignment="Top"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1">
            <TextBlock Text="Email:" Margin="5" />
            <TextBox Name="EmailTextBox" Width="200" Margin="5" />
        </StackPanel>
        <StackPanel  Orientation="Horizontal" Grid.Row="3" Grid.Column="1">
            <TextBlock Text="Phone:" Margin="5" />
            <TextBox Name="PhoneTextBox" Width="200" Margin="5" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="1" Margin="0,0,0,10">
            <Button Content="Sign Up" Name="SignUpButton"  Margin="5" Click="SignUpButton_Click" />
            <Button Content="Sign In" Name="SignInButton" Margin="5" Click="SignInButton_Click" />
        </StackPanel>
        <Button x:Name="DBButton" Content="To DataBase" Grid.Row="5" Grid.Column="1" Click="DBButton_Click"  />
    </Grid>
</Page>
