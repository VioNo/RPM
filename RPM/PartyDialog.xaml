<Page x:Class="RPM.PartyDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RPM"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PartyDialog">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="MainStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Description:" Width="150"/>
                <TextBox x:Name="DescriptionTextBox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Count:" Width="150"/>
                <TextBox x:Name="CountTextBox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Measure:" Width="150"/>
                <TextBox x:Name="MeasureTextBox" Width="200"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Margin="0,20">
                <Button Content="Save" Click="SaveButton_Click" Margin="5"/>
                <Button Content="Back" Click="BackButton_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>